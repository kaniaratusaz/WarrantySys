<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CustomerController">
    <top>
        <Label text="Manajemen Pelanggan" style="-fx-font-size: 16px; -fx-padding: 10; -fx-font-weight: bold;"/>
    </top>
    <center>
        <VBox spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <TableView fx:id="tblCustomers" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colName" text="Nama" prefWidth="150"/>
                    <TableColumn fx:id="colPhone" text="Telepon" prefWidth="100"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="colAddress" text="Alamat" prefWidth="200"/>
                </columns>
            </TableView>
            <TitledPane text="Form Pelanggan" expanded="true">
                <content>
                    <GridPane hgap="10" vgap="10">
                        <Label text="Nama:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Telepon:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtPhone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Alamat:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextArea fx:id="txtAddress" GridPane.rowIndex="3" GridPane.columnIndex="1" prefRowCount="2"/>
                    </GridPane>
                </content>
            </TitledPane>
            <HBox spacing="10">
                <Button text="Tambah" onAction="#handleAdd"/>
                <Button text="Ubah" onAction="#handleUpdate"/>
                <Button text="Hapus" onAction="#handleDelete"/>
                <Button text="Bersihkan" onAction="#handleClear"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
