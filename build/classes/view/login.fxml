<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Warranty Claim System" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Silakan login" />
            <GridPane hgap="10" vgap="10">
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>
            <Button text="Login" onAction="#handleLogin" maxWidth="Infinity"/>
        </VBox>
    </center>
</BorderPane>
